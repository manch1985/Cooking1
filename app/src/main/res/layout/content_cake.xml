<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alphonsa.cooking1.CakeActivity"
    tools:showIn="@layout/activity_cake"
    android:background="@drawable/cakebak">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="historical.com.example.ahmed.historicalplacesbd.Division">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Red Wine Choclate Cake"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button1"
        android:onClick="cake1"
        android:background="@drawable/buttonscake"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flourless Orange Cake"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button3"
        android:onClick="cake2"
        android:background="@drawable/buttonscake"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plum Cake"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button4"
        android:onClick="cake3"
        android:background="@drawable/buttonscake"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Strawberry Tea Cake"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button5"
        android:onClick="cake4"
        android:background="@drawable/buttonscake"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lemon Poppy Seed Cake"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button6"
        android:onClick="cake5"
        android:background="@drawable/buttonscake"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choclate Cake"
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/button7"
            android:onClick="cake6"
            android:background="@drawable/buttonscake"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/button6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button1"
            android:layout_alignEnd="@+id/button1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ragi Banana Choclate Cake"
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/button8"
            android:onClick="cake7"
            android:background="@drawable/buttonscake"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button1"
            android:layout_alignEnd="@+id/button1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choclate Almond Brownie"
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/button9"
            android:onClick="cake8"
            android:background="@drawable/buttonscake"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/button8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button1"
            android:layout_alignEnd="@+id/button1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cup Cake"
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/button10"
            android:onClick="cake9"
            android:background="@drawable/buttonscake"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/button9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button1"
            android:layout_alignEnd="@+id/button1" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eggless Strawberry Cake"
            android:textSize="@dimen/abc_text_size_large_material"
            android:id="@+id/button11"
            android:onClick="cake10"
            android:background="@drawable/buttonscake"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/button10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button1"
            android:layout_alignEnd="@+id/button1" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
