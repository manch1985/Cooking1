<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alphonsa.cooking1.OatmealPancakeActivity"
    tools:showIn="@layout/activity_oatmeal_pancake"
    android:background="@drawable/buttonsveg">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" &lt;ScrollView
         xmlns:android=&quot;http://schemas.android.com/apk/res/android&quot;
           android:layout_width=&quot;match_parent&quot;
           android:layout_height=&quot;match_parent&quot;>
           &lt;LinearLayout
            xmlns:tools=&quot;http://schemas.android.com/tools&quot; android:layout_width=&quot;match_parent&quot;         android:layout_height=&quot;wrap_content&quot;         android:orientation=&quot;vertical&quot;         tools:context=&quot;historical.com.example.ahmed.historicalplacesbd.Division&quot;>">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="historical.com.example.ahmed.historicalplacesbd.Division"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OatMeal Pancake"
                android:gravity="fill_horizontal"
                android:id="@+id/oatmealpancake1"
                android:textColor="#f4121213"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oatmealpancake2"
                android:layout_below="@+id/oatmealpancake1"
                android:src="@drawable/oatmealpancake"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS (240 ml cup used): \n
•	1½ cups oats flour\n
•	¼ tsp or as needed salt\n
•	1½ baking powder\n
•	⅛ tsp cinnamon(ceylon cinnamon) (optional) \n
•	2 large eggs\n
•	1 cup milk (any milk) \n
•	1½ tbsp soft butter or oil\n
•	1 tsp vanilla extract\n
•	1 tbsp sugar\n\n
FOR SERVING: \n
•	Chocolate syrup or maple syrup\n\n
METHOD: \n
1.	Powder or process oats to a fine flour. Measure 1½ cups of this to a bowl. Add baking powder, salt, and cinnamon as well. Mix together. \n
2.	Whisk together, eggs, milk,soft butter, vanilla and sugar. \n
3.	Add the flour to the egg mixture and combine until mixed. Do not over do. \n
4.	Set this aside for 8 to 10 minutes. \n
5.	Grease a pan and heat it. \n
6.	When it hot enough pour a ladle of this batter and gently spread it a bit only. \n
7.	Cook until it is done, flip and cook on the other side as well until done. \n
8.	Serve hot with chocolate syrup or maple syrup. \n


"
                android:id="@+id/oatmealpancake3"
                android:layout_below="@+id/oatmealpancake2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#030303"
                android:textIsSelectable="false"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
