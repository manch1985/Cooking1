<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alphonsa.cooking1.EggActivity"
    tools:showIn="@layout/activity_egg">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="historical.com.example.ahmed.historicalplacesbd.Division">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EGG PARATHA"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button1"
                android:onClick="egg1"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPICY POTATO EGG CURRY"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button3"
                android:onClick="egg2"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NADAN EGG CURRY"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button4"
                android:onClick="egg3"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EGG ROAST"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button5"
                android:onClick="egg4"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CRISPY EGG SNACK"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button6"
                android:onClick="egg5"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EGG DOSA"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button7"
                android:onClick="egg6"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EGG THORAN"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button8"
                android:onClick="egg7"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STUFFED EGG BUNS"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button9"
                android:onClick="egg8"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EGG CHOPS"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/button10"
                android:onClick="egg9"
                android:background="@drawable/buttons"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/button9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button1"
                android:layout_alignEnd="@+id/button1" />



        </LinearLayout>

    </ScrollView>



</RelativeLayout>

