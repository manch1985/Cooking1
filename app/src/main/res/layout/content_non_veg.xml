<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alphonsa.cooking1.NonVegActivity"
    tools:showIn="@layout/activity_non_veg"
   android:background="@drawable/chickencroq">
    <Button
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="BEEF RECIPES"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button1"
        android:onClick="beef"
        android:background="@drawable/buttonspaneer"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="CHICKEN RECIPES"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button2"
        android:onClick="chicken"
        android:background="@drawable/buttonspaneer"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="EGG RECIPES"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button3"
        android:onClick="egg"
        android:background="@drawable/buttonspaneer"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="PORK RECIPES"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button4"
        android:onClick="pork"
        android:background="@drawable/buttonspaneer"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="MUTTON RECIPES"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button5"
        android:onClick="mutton"
        android:background="@drawable/buttonspaneer"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:text="FISH RECIPES"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/button6"
        android:onClick="fish"
        android:background="@drawable/buttonspaneer"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
