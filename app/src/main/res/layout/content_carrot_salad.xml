<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alphonsa.cooking1.CarrotSaladActivity"
    tools:showIn="@layout/activity_carrot_salad"
    android:background="@drawable/buttonsveg">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" &lt;ScrollView
         xmlns:android=&quot;http://schemas.android.com/apk/res/android&quot;
           android:layout_width=&quot;match_parent&quot;
           android:layout_height=&quot;match_parent&quot;>
           &lt;LinearLayout
            xmlns:tools=&quot;http://schemas.android.com/tools&quot; android:layout_width=&quot;match_parent&quot;         android:layout_height=&quot;wrap_content&quot;         android:orientation=&quot;vertical&quot;         tools:context=&quot;historical.com.example.ahmed.historicalplacesbd.Division&quot;>">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="historical.com.example.ahmed.historicalplacesbd.Division"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrot Salad"
                android:gravity="fill_horizontal"
                android:id="@+id/carrotsalad1"
                android:textColor="#f4121213"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carrotsalad2"
                android:layout_below="@+id/carrotsalad1"
                android:src="@drawable/carrotsalad"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS:\n\n
Carrot grated - 1 1/4 cup\n
Lemon juice- 1 tbsp or as needed\n
Salt needed\n
FOR SEASONING: \n\n
Oil -1 tsp\n
Mustard seeds -1 tsp\n
Green chilli finely chopped -1\n
Curry leaves -few\n
FOR GARNISHING:	\n
Coriander leaves finely chopped\n\n
METHOD:\n
1.	Wash, peel the skin and grate carrots finely.\n
    Add salt and lemon juice to taste.\n
2.	Heat a tsp of oil, add mustard seeds,when it splutters, add green chillies and curry leaves.\n
3.	Saute for a second and add to the grated carrots.\n
4.	Mix well, garnish with coriander leaves and serve with rice or sambar sadam or curd rice.\n


"
                android:id="@+id/carrotsalad3"
                android:layout_below="@+id/carrotsalad2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#030303"
                android:textIsSelectable="false"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
