<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alphonsa.cooking1.PrawnsStirFryActivity"
    tools:showIn="@layout/activity_prawns_stir_fry"
    android:background="@drawable/buttonsveg">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" &lt;ScrollView         xmlns:android=&quot;http://schemas.android.com/apk/res/android&quot;         android:layout_width=&quot;match_parent&quot;         android:layout_height=&quot;match_parent&quot;>      &lt;LinearLayout         xmlns:tools=&quot;http://schemas.android.com/tools&quot; android:layout_width=&quot;match_parent&quot;         android:layout_height=&quot;wrap_content&quot;         android:orientation=&quot;vertical&quot;         tools:context=&quot;historical.com.example.ahmed.historicalplacesbd.Division&quot;>">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="historical.com.example.ahmed.historicalplacesbd.Division"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prawns Stir Fry"
                android:gravity="fill_horizontal"
                android:id="@+id/prawnsstirfry1"
                android:textColor="#f4121213"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prawnsstirfry2"
                android:layout_below="@+id/mprawnsstirfry1"
                android:src="@drawable/prawnsstirfry"


                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS:\n\n
•	Prawns – 500g\n
•	Mustard Seeds – ½ tsp\n
•	Onion – 1 big\n
•	Ginger  garlic paste – 4 tsp\n
•	Red chilli powder – 2 tsp\n
•	Pepper powder – ½  tsp\n
•	Turmeric powder – 1  tsp\n
•	Coriander powder – 2 tsp (optional) \n
•	Sliced coconut pieces (thengakothu)  – ½  cup\n
•	Cocum (kudampuli) – 2-3 pieces\n
•	Curry leaves – few\n
•	Oil\n
•	Salt\n\n
 METHOD: \n
1.	Heat oil in a pan and splutter mustard seeds. \n
2.	Add sliced onion and curry leaves. \n
3.	When onion becomes soft add ginger garlic paste, green and cook for 2-3 min. \n
4.	Add chilli powder, pepper powder, turmeric powder and cook for 2-3 min. \n
5.	Add coconut pieces and mix well. \n
6.	Add 1 cup of water and let it boil well. \n
7.	Add cleaned prawns and cocum mix well. \n
8.	Cook with the pan covered in medium flame till prawns are cooked and is almost dry. Serve hot. \n




"
                android:id="@+id/prawnsstirfry3"

                android:layout_below="@+id/prawnsstirfry2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#030303"
                android:textIsSelectable="false" />

        </LinearLayout>
    </ScrollView>




</RelativeLayout>
